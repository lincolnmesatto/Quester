<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CadastrarDisciplinaActivity">

    <EditText
        android:id="@+id/editTextNomeDisciplina"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:textStyle="bold"
        android:background="@drawable/round_border"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/nome"
        android:textColorHint="@color/tortoise"
        android:padding="16dp"
        android:textSize="18sp"
        app:counterMaxLength="70"
        app:helperText="Required"
        app:layout_constraintHorizontal_bias="0.497"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnSalvarDisciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonSalvarClicked"
        android:text="@string/salvar"
        android:layout_marginTop="88dp"
        android:background="@drawable/round_bg"
        app:layout_constraintEnd_toEndOf="@+id/editTextNomeDisciplina"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/editTextNomeDisciplina"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeDisciplina"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>