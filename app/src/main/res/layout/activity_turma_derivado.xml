<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.TurmaDerivadoActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAluno"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/tortoise"
        app:cardCornerRadius="10dp"
        android:onClick="cardAlunoClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/turmaDerAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/alunos"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="40dp"
            tools:layout_conversion_absoluteWidth="118dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="32dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/alunos1"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="24dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="32dp"></ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDisciplina"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/tortoise"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewAluno"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardViewAluno"
        app:layout_constraintTop_toBottomOf="@+id/cardViewAluno">

        <TextView
            android:id="@+id/turmaDerDisciplina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="cardDisciplinaClicked"
            android:text="@string/disciplinas"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="40dp"
            tools:layout_conversion_absoluteWidth="118dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="32dp"  />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/disciplinas1"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="24dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="32dp"></ImageView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>